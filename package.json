{
  "name": "pulse-panel",
  "private": true,
  "version": "0.5.0",
  "author": "Jared Meadows <meadowsjared@gmail.com>",
  "main": "src/electron/main/main.js",
  "description": "A soundboard app that looks nice too",
  "homepage": "https://github.com/Counsel-of-Big-Brains/pulse-panel/blob/main/README.md",
  "scripts": {
    "dev": "bun app:dev",
    "build": "bun run app:build",
    "preview": "bun app:preview",
    "rebuild": "electron-rebuild",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c eslint.config.js ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "bun run vite:build && tsc && electron-builder",
    "app:preview": "bun run vite:build && tsc && electron ."
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "src/electron/**/*"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.13",
    "@tailwindcss/forms": "^0.5.7",
    "idb": "^8.0.0",
    "nconf": "^0.12.1",
    "pinia": "^2.1.7",
    "tailwindcss": "^3.4.3",
    "uuid": "^9.0.1",
    "vue": "^3.4.27",
    "vue-inline-svg": "^3.1.2"
  },
  "devDependencies": {
    "@evg3/vite-plugin-rewrite-all": "^1.0.3",
    "@types/nconf": "^0.10.6",
    "@types/node": "^20.12.10",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "dmg-builder": "25.0.0-alpha.7",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "25.0.0-alpha.7",
    "eslint": "^9.2.0",
    "globals": "^15.1.0",
    "postcss": "^8.4.38",
    "typescript": "^5.4.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.2.11",
    "vue-router": "^4.3.2"
  }
}
